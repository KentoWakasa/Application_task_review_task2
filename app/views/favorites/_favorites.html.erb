<% if user_signed_in? %> <!--ログイン状態でのいいねボタン表示　すでにいいねしているかどうか（book_userメソッド）-->

  <% unless @book_favorites_user(current_user.id).blank? %>
    <%= link_to book_favorites_path(book_id: @book.id, id: @book.likes[0].id), method: :delete, remote: true do %>
      <div class="vertical_like">
       <%= image_tag "icon_red_heart.png", size: '40x40' %>
      </div>
    <% end %>
  <% else %>
    <%= link_to book_favorites_path(@book.id), method: :post, remote: true do %>
      <div class="vertical_like">
        <%= image_tag "icon_heart.png", size: '40x40' %>
      </div>
    <% end %>
  <% end %>
<% end %>